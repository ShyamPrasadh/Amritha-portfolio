<style>
  #experience {
    padding: 8rem 0;
  }

  .exp-header {
    margin-bottom: 4rem;
  }

  .label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent-color);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .exp-header h2 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--heading-color);
  }

  .exp-content {
    position: relative;
    max-width: 900px;
  }

  .timeline-line {
    position: absolute;
    left: 10px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(255, 255, 255, 0.1);
  }

  .line-fill {
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, var(--aurora-teal), var(--aurora-green), var(--aurora-purple));
    transform-origin: top;
    animation: fillLine 1s ease-out;
  }

  @keyframes fillLine {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }

  .exp-item {
    position: relative;
    padding-left: 3rem;
    padding-bottom: 3rem;
  }

  .exp-marker {
    position: absolute;
    left: 0;
    top: 0;
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .marker-dot {
    width: 10px;
    height: 10px;
    background: var(--aurora-teal);
    border-radius: 50%;
    z-index: 2;
  }

  .marker-ring {
    position: absolute;
    width: 22px;
    height: 22px;
    border: 2px solid var(--aurora-teal);
    border-radius: 50%;
    opacity: 0.3;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.3; }
    50% { transform: scale(1.2); opacity: 0.1; }
  }

  .exp-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .exp-date {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--aurora-green);
    font-family: var(--font-heading);
  }

  .exp-location {
    font-size: 0.9rem;
    color: #64748b;
  }

  .exp-details h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--heading-color);
    margin-bottom: 0.5rem;
  }

  .exp-details h4 {
    font-size: 1.1rem;
    font-weight: 400;
    color: #94a3b8;
    margin-bottom: 2rem;
  }

  .exp-highlights {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .highlight {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .highlight-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .highlight strong {
    display: block;
    font-size: 1rem;
    color: var(--heading-color);
    margin-bottom: 0.25rem;
    font-weight: 500;
  }

  .highlight p {
    font-size: 0.95rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0;
  }

  .exp-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .exp-tags span {
    padding: 0.4rem 0.8rem;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--aurora-teal);
    background: rgba(45, 212, 191, 0.1);
    border: 1px solid rgba(45, 212, 191, 0.2);
    border-radius: 0.5rem;
    font-family: var(--font-heading);
  }

  @media (max-width: 600px) {
    .exp-item {
      padding-left: 2rem;
    }
    .timeline-line {
      left: 5px;
    }
  }
</style>
