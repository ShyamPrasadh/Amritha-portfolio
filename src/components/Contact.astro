<style>
  #contact {
    padding-bottom: 3rem;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--aurora-teal);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .contact-header h2 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--heading-color);
    margin-bottom: 1rem;
  }

  .subtitle {
    color: #64748b;
    font-size: 1.1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  @media (max-width: 600px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: rgba(17, 17, 24, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    text-decoration: none;
    color: var(--text-color);
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    border-color: rgba(45, 212, 191, 0.3);
    transform: translateY(-2px);
    background: rgba(45, 212, 191, 0.05);
  }

  .card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(45, 212, 191, 0.1);
    border-radius: 12px;
    color: var(--aurora-teal);
    flex-shrink: 0;
  }

  .card-icon svg {
    width: 24px;
    height: 24px;
  }

  .card-icon.linkedin {
    background: rgba(10, 102, 194, 0.15);
    color: #0a66c2;
  }

  .card-icon.github {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .card-icon.phone {
    background: rgba(74, 222, 128, 0.1);
    color: var(--aurora-green);
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-content h4 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--heading-color);
    margin-bottom: 0.25rem;
  }

  .card-content span {
    font-size: 0.85rem;
    color: #64748b;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .card-arrow {
    font-size: 1.25rem;
    color: #64748b;
    transition: transform 0.3s, color 0.3s;
  }

  .contact-card:hover .card-arrow {
    transform: translateX(4px);
    color: var(--aurora-teal);
  }

  /* Social Bar */
  .social-bar {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 4rem;
  }

  .social-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    color: #94a3b8;
    transition: all 0.3s ease;
  }

  .social-icon svg {
    width: 22px;
    height: 22px;
  }

  .social-icon:hover {
    background: rgba(45, 212, 191, 0.1);
    border-color: rgba(45, 212, 191, 0.3);
    color: var(--aurora-teal);
    transform: translateY(-3px);
  }

  /* Footer */
  .footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer p {
    color: #64748b;
    font-size: 0.9rem;
    margin: 0;
  }

  .footer .tech {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    color: #475569;
  }
</style>
